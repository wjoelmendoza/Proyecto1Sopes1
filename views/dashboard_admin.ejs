<%
    let title = 'Dashboard Administrador';
    let claseb = 'none';
%>

<%include head%>
<div id="wrapper">
  <!-- barra lateral-->
  <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordion">
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="dash">
      <div class="sidebar-brand-icon rotate-n-15">
        <i class="fas fa-laugh-wink"></i>
      </div>
      <div class="sidebar-brand-text mx-3">Monitor del Sistema</div>
    </a>
    <hr class="sidebar-divider my-0">
    <li class="nav-item">
      <a class="nav-link" href="tablas">
        <i class="fas fa-fw fa-table"></i>
        <span>Tablas</span>
      </a>
    </li>
    <hr class="sidebar-divider my-0">
    <li class="nav-item active">
      <a class="nav-link" href="dashboard_admin">
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Dashboard de Administrador</span>
      </a>
    </li>
    <hr class="sidebar-divider my-0">
    <li class="nav-item">
      <a class="nav-link" href="logout">
        <i class="fas fa-fw fa-power-off"></i>
        <span>Salir</span>
      </a>
    </li>
    <hr class="sidebar-divider d-none d-md-block">
    <div class="text-center d-none d-md-inline">
      <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>
  </ul>
  <!--barra lateral-->
  <div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>
    <!--Estadisticas-->
    <div class="row">
       <!--Total de tweets-->
       <div class="col-xl-2 col-md-5 mb-4">
          <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                    Total de Categorías
                  </div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800" id="tcats">
                    0
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
       <!--Total de usuarios-->
       <div class="col-xl-2 col-md-5 mb-4">
          <div class="card border-left-succes shadow h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-succes text-uppercase mb-1">
                    Total de Usuarios
                  </div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800" id="tusuarios">
                    0
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!--Total de categorias-->
      <div class="col-xl-2 col-md-5 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col mr-2">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                  Total de Categorías
                </div>
                <div class="h5 mb-0 font-weight-bold text-gray-800" id="tcats">
                  0
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--Categoria com mas twits-->
      <div class="col-xl-2 col-md-5 mb-4">
          <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                    Usuario Top
                  </div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800">
                    <div id="utopn">Sin categoría</div>
                    <div id="utopc">0</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!--Categoria com mas twits-->
      <div class="col-xl-2 col-md-5 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col mr-2">
                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                  Categoría Top
                </div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">
                  <div id="ctopn">Sin categoría</div>
                  <div id="ctopc">0</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="content-wrapper" class="d-flex flex-column">
      <div class="card shadow mb-3">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Top10 de Categorías</h6>
        </div>
        <div class="card-body">
          <div class="chart-area">
            <canvas id="graficaTop10"></canvas>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/chart.js/Chart.min.js"></script>
<script src="js/graf_pie.js"></script>
<%include foot%>